{
  "manifest_version": 3,
  "name": "Web Security Shield",
  "version": "1.0",
  "description": "Proactively scans links and blocks malicious sites.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:5000/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  },
  
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "adult_ruleset",
        "enabled": false,
        "path": "ruleset_adult.json"
      }
    ]
  }
}